/dts-v1/;
/plugin/;

/ {
	compatible = "allwinner,sun50i-a64";

	fragment@0 {
		target = <&pio>;

		__overlay__ {

			spi1_cs2: spi1_cs2 {
				pins = "PD6";
				function = "gpio_out";
				output-high;
			};
		};
	};

	fragment@1 {
		target = <&spi1>;

		__overlay__ {
			pinctrl-names = "default", "default";
			pinctrl-1 = <&spi1_cs2>;
			cs-gpios = <0>, <&pio 0x3 0x6 0x0>;
		};
	};

	__symbols__ {
		spi1_cs2 = "/fragment@0/__overlay__/spi1_cs2";
	};

//	__fixups__ {
