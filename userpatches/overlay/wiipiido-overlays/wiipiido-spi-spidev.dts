/dts-v1/;
/plugin/;

/ {
	compatible = "allwinner,sun50i-a64";

	fragment@0 {
		target-path = "/aliases";

		__overlay__ {
			spi0 = "/soc/spi@1c68000";
			spi1 = "/soc/spi@1c69000";
		};
	};

	fragment@1 {
		target = <&spi0>;

		__overlay__ {
			#address-cells = <0x1>;
			#size-cells = <0x0>;

			status = "okay";

			spidev {
				compatible = "spidev";
				reg = <0x0>;
				spi-max-frequency = <0xf4240>;
			};
		};
	};

	fragment@2 {
		target = <&spi1>;

		__overlay__ {
			#address-cells = <0x1>;
			#size-cells = <0x0>;

			num-cs = <0x2>;
			status = "okay";

			spidev@0 {
				compatible = "spidev";
				reg = <0x0>;
				spi-max-frequency = <0xf4240>;
			};

			spidev@1 {
				compatible = "spidev";
				reg = <0x1>;
				spi-max-frequency = <0xf4240>;
			};
		};
	};

//	__fixups__ {
//		spi0 = "/fragment@1:target:0";
//		spi1 = "/fragment@2:target:0";
//	};
};
